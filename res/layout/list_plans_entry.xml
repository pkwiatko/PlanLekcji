<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/list_plan_lesson_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:textColor="#4AAE21"
        style="@style/TextMedium"
         />

    
    <TextView
        android:id="@+id/list_plan_lesson_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#31B6E7"       
        android:paddingRight="5dp"
        style="@style/TextSmall"
        />

    <TextView
        android:id="@+id/list_plan_lesson_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#31B6E7"       
        android:paddingRight="5dp"        
        style="@style/TextSmall" />

    <TextView
        android:id="@+id/list_plan_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextMedium"
        android:textColor="#4AAE21"        
        android:minWidth="130dip"
        />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/list_plan_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#55D4FF"
            style="@style/TextTiny" 
            />

        <TextView
            android:id="@+id/list_plan_classroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            style="@style/TextTiny" 
             />
    </LinearLayout>

</LinearLayout>